<%= form_with model: product do |form| %>
  <div>
    <%= form.label :name  %><br>
    <%= form.text_field :title %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :details %><br>
    <%= form.text_area :body %><br>
      <div><%= message %></div>
    <% end %>
  </div>

 <div>
    <%= form.label :quantity  %><br>
    <%= form.text_field :title %>
      <div><%= message %></div>
    <% end %>
  </div>

 <div>
    <%= form.label :brand  %><br>
    <%= form.text_field :title %>
      <div><%= message %></div>
    <% end %>
  </div>

 <div>
    <%= form.label :price  %><br>
    <%= form.text_field :title %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>  
<% end %>

